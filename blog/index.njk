---
layout: base.njk
title: Blog
---

<div class="container mx-auto max-w-screen-lg text-black">
    <h2>Blog</h1>

    {% for post in collections.blog | reverse %}
        <article>
            <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
            <p>{{ post.date }}</p>
            <p>{{ post.data.excerpt | md | safe }}</p>
        </article>
    {% endfor %}
</div>
