<div class="flex justify-between text-gray-800 text-lg">
    {% if categories.length > 0 %}
        <p class="m-0">
        {{ "Categories:" if categories.length > 1 else "Category:"}}
            {% for category in categories %}
                <a href="{{ category | blogCategoryUrl }}">{{ category }}</a>{{ ", " if not loop.last }}
            {% endfor %}
        </p>
    {% endif %}

    <p class="text-md text-gray-700 italic m-0 text-right">Published {{ date | date }}</p>
</div>
